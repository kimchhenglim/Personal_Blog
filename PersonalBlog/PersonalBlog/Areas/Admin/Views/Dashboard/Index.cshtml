@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Dashboard";
}
<div class="row">
    <div class="fs-1 col-11">Personal Blog</div>
    <a class="col-1 text-center justify-content-center align-content-center align-items-center text-decoration-none text-black" asp-action="New"><i class="bi bi-plus"></i>Add</a>
</div>
@model List<PersonalBlog.Areas.Admin.ArticleVm>;
@if (Model != null)
{
    foreach (PersonalBlog.Areas.Admin.ArticleVm article in Model)
    {
        <div class="row">
            <div class="col-10">@article.Title</div>
            <a class="col-1 text-center text-decoration-none text-black-50" asp-action="Edit" asp-route-id="@article.Id">Edit</a>
            <form asp-action="Delete" asp-route-id="@article.Id" method="post" class="col-1 text-center">
                <button type="submit" class="text-black-50" style="background: none; border: none;">
                    Delete
                </button>
            </form>
            
        </div>
    }
}
